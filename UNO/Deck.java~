import java.util.ArrayList;
public class Deck{

    public ArrayList <Card>  createDeck(){
	ArrayList <Card> deck = new ArrayList <Card> (108); //total 108 cards
	int color= 1;
	int index = 0;
	while (index < 108){
	    for (int a = 0; a < 10; a ++){
		color = 1;
		for (int i = 0; i < 4; i++){
		    deck[index] = new NormalCard(a, color);
		    color ++;
		    index ++;
		}
	    }
	}
    }
				       
    public static void main(String[] args){
	Deck one = new Deck();
	System.out.println(one.createDeck());
    }//end main
    
}//end class
